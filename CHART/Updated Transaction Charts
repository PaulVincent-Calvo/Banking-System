import matplotlib.pyplot as p
import mysql.connector

   
class Pie_Chart:
    def connect_database(self):
        try:                     
            host =  "localhost" 
            username = "root"
            password =  ""
            database = "treasury_citadel_database"

            connection = mysql.connector.connect(
                host= host,
                user= username,
                password= password,
                database= database)
            
            print("Database Initialization Successful...")
        
        except mysql.connector.Error as error:
            print(error)
        
        return connection

    

    def fetch_count(self, connection, transac_type, access_as, checkings_id):
        cursor = connection.cursor()
        
        if access_as == "Employee" and checkings_id == None:
            query = '''
            SELECT COUNT(transaction_type) AS occurrence_count
            FROM transactions WHERE transaction_type = %s'''
            cursor.execute(query, (transac_type,))
            result = cursor.fetchone()
            
        elif access_as == "Customer" and checkings_id != None:
            query = '''
            SELECT COUNT(transaction_type) AS occurrence_count
            FROM transactions WHERE transaction_type = %s and checkings_id = %s'''
            cursor.execute(query, (transac_type, checkings_id,))
            result = cursor.fetchone()

        if result:
            count_transac = result[0]
        else:
            count_transac = 0

        return count_transac

    def main(self, access_as, checkings_id):
        connection = self.connect_database()
        
        count_withdraw = self.fetch_count(connection, "Withdraw", access_as, checkings_id)
        count_deposit = self.fetch_count(connection, "Deposit", access_as, checkings_id)
        count_transfer = self.fetch_count(connection, "Transfer", access_as, checkings_id)
        print(count_withdraw)

        size_per_session = [count_withdraw, count_deposit, count_transfer,]
        label = ["Withdraw", "Deposit", "Transfer"]

        p.pie(size_per_session,labels=label)
        p.show()


